@model TagDTO

<div class="container">

    <div class="tags">

         <div class="tag">
             <h1>Link</h1>

             <div class="form">
                 <form asp-antiforgery="true" >
                    <input asp-for="@Model.Name" value="LinkName" >
                    <input asp-for="@Model.TargetLink" value="LinkValue" >
                    <button data-url="@Url.Action("Create", "Admin")" 
                        id="add" type="submit" value="Add">Add</button>
                 </form>
             </div>

             <hr>

             <div class="links">
              <div class="item">
                    @foreach(var item  in @Model.Tags)
                    {
                        <form asp-antiforgery="true" >
                            <div class="data-links">
                                <div class="data-input">
                                    <input data-type="name" type="text" value=@item.Name>
                                    <input type="text" value=@item.TargetLink>
                                    <input type="checkbox"> 
                                    <label for="active" >Ativo</label>
                                </div>
                                <div class="data-action">
                                    <button data-id="@item.Id" value="Update">Update</button>
                                </div>  
                            </div>
                        </form> 
                    }


                </div> 

            </div>            
 
 
         </div>

         <div class="view">
            <h1>View on Mobile</h1>
    
         </div>



    </div>


</div>
