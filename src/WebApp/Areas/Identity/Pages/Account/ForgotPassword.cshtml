@page
@model ForgotPasswordModel
 


 <div class="container g-py-150 text-center">
   
        <form id="account" method="post">
             <h4>Enter your email to receive a password reset.</h4>
            <div asp-validation-summary="All" class="text-danger"></div>
             <div class="form-group">
                    <input asp-for="Input.Email" class="form-control form-control-md g-rounded-20" type="text" placeholder="Email">
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-group actions">
                <p>
                    <button type="submit" class="btn btn-md u-btn-blue g-mr-10 g-mb-15">Reset my Password</button>
                    <a   asp-page="./Login">Return to Login.</a>
                </p>
            </div>

        </form>
   

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
